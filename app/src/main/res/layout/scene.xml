<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/scene_bg" />

        <ImageView
            android:id="@+id/ivPlayerChar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_margin="0dp"
            android:background="#0000"
            android:scaleType="fitXY"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:translationX="20dp"
            android:visibility="invisible"
            tools:srcCompat="@drawable/player_char_atk"
            tools:visibility="invisible" />

        <ImageView
            android:id="@+id/ivEnemyChar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_margin="0dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:translationX="-20dp"
            android:visibility="invisible"
            tools:srcCompat="@drawable/slime_idle"
            tools:visibility="invisible" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/givPlayerChar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:src="@drawable/player_char_idle" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/givEnemyChar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:src="@drawable/slime_idle" />

    </androidx.cardview.widget.CardView>
</LinearLayout>